@model List<ShopProject.Areas.Shopper.Models.CartItem>
@{
    ViewBag.Title = "Giỏ hàng của bạn";
    Layout = "~/Areas/Shopper/Views/Shared/_LayoutShop.cshtml";
}
<div class="container">
    @if (Model == null || Model.Count == 0)
    {
        <div class="spec ">
            <h3>Giỏ hàng</h3>
            <div class="ser-t">
                <b></b>
                <span><i></i></span>
                <b class="line"></b>
            </div>
        </div>
        <p class="text-info text-center" style="font-size:25px;">
            Giỏ hàng của bạn trống!
        </p>
    }
    else
    {
        <div class="spec ">
            <h3>Giỏ hàng</h3>
            <div class="ser-t">
                <b></b>
                <span><i></i></span>
                <b class="line"></b>
            </div>
        </div>
        int total = 0;
        int i = 0;
        <div class="row">
            <div class="col-sm-12">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <tr>
                            <th>Hình</th>
                            <th>Tên sản phẩm</th>
                            <th>Số lượng và kích cỡ</th>
                            <th>Đơn giá</th>
                            <th>Thành tiền</th>
                            <th></th>
                        </tr>
                        @foreach (var item in Model)
                        {

                            <tr>
                                <td class="text-center"><img src="@item.Hinh" width="70" height="60" /> </td>
                                <td><a target="_blank" href="@Url.Action("ProductDetail", "Products", new { id = item.SanPhamID })" style="font-size:medium;"> @item.TenSanPham </a> </td>
                                <td>
                                    <form id="formSoluong_@i" action="@Url.Action("SuaSoLuong","GioHang")" method="get">
                                        <input type="hidden" name="SanPhamID" value="@item.SanPhamID" />
                                        <input class="col-lg-4" style="height:30px;" type="number" min="1" step="1" name="soluongmoi" value="@item.SoLuong" />
                                        <select class="col-lg-4" style="height:30px;" name="sizemoi">
                                            <option style="display:none;" value="@item.Size">@item.Size</option>
                                            <option value="S">S</option>
                                            <option value="M">M</option>
                                            <option value="L">L</option>
                                            <option value="XL">XL</option>
                                            <option value="XXL">XXL</option>
                                        </select>
                                        <button class="btn-danger btn-capnhat" onclick="$('#formSoluong_@i').submit();">Cập nhật</button>
                                    </form>
                                </td>
                                <td> @Int32.Parse(item.DonGia).ToString("#,##0") VNĐ </td>
                                <td> @item.ThanhTien.ToString("#,##0") VNĐ </td>
                                <td> <a href="@Url.Action("XoaKhoiGio",new { SanPhamID = item.SanPhamID})" onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?');" class="btn btn-danger btn-sm btn-xoakhoigio">Xóa</a> </td>
                            </tr>
                            i++;
                            total += @item.ThanhTien;
                        }
                        <tr>
                            <td></td>
                            <td class="text-right"></td>
                            <td></td>
                            <td class="text-right">Tổng thành tiền:</td>
                            <td style="font-size:large;">@total.ToString("#,##0") VNĐ </td>
                            @*@if (item.Size == "Size")
                            {
                                <td><button role="button" class="btn btn-success" id="btn-thanhtoan" onclick="alertsize()">Thanh toán</button></td>
                            }
                            else
                            {*@
                                <td><a href="@Url.Action("Index", "ThanhToan")" role="button" class="btn btn-success" id="btn-thanhtoan">Thanh toán</a></td>
                            

                        </tr>
                    </table>
                </div>

            </div>

        </div>
    }
</div>
